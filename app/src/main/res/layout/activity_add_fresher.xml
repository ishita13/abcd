<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_fresher"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Enter Details"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"

        android:layout_marginBottom="30dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/Empty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Employee Id"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field4"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Department"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Course"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field112"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="isAvailable"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty113"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field2"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:onClick="viewA"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View_Details"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="viewA"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field122"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Employee id to be deleted"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty123"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field2"/>
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete_Entry(Enter Id)"
        android:layout_gravity="center"
        android:id="@+id/button_new"
        android:layout_marginTop="20dp"
        android:onClick="next_activity"></Button>
</LinearLayout>
</ScrollView>