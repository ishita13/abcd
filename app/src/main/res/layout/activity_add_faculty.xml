<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFaculty"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Enter Details"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"

        android:layout_marginBottom="40dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/Empty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Course Name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field4"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enter Slots" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn11"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Field14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter Course Name"
            android:textStyle="bold"
            android:layout_weight="1"

            android:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/empty24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:layout_weight="1"
            android:ems="10"
            android:layout_toRightOf="@id/Field4"/>



    </LinearLayout>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View_Details"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <!--        android:onClick="ViewA"/>-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete_Details(Enter Id)"
        android:layout_gravity="center"
        android:id="@+id/button_new"/>
    <!--        android:onClick="next_activity"></Button>-->


</LinearLayout>
</ScrollView>